<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 不生成ModelExample-->
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!--<context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">-->
        <property name="javaFileEncoding" value="UTF-8" />
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.apocalypse.common.data.mybatis.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/apocalypse_idaas?serverTimezone=Asia/Shanghai"
                        userId="root" password="root">
        </jdbcConnection>

        <!-- DO对象生成配置 -->
        <javaModelGenerator targetPackage="com.apocalypse.idaas.module.single" targetProject="src/main/java"/>

        <!-- mapper.xml生成配置 -->
        <sqlMapGenerator targetPackage="mapper/single" targetProject="src/main/resources"/>

        <!-- Mapper接口生成配置 -->
        <javaClientGenerator targetPackage="com.apocalypse.idaas.mapper.single" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="oauth_access_token" domainObjectName="OAuthAccessToken" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>

        <table tableName="oauth_approvals" domainObjectName="OAuthApprovals" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>

        <table tableName="oauth_client_details" domainObjectName="OAuthClientDetails" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>

        <table tableName="oauth_client_token" domainObjectName="OAuthClientToken" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>

        <table tableName="oauth_code" domainObjectName="OAuthCode" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>

        <table tableName="oauth_refresh_token" domainObjectName="OAuthRefreshToken" enableSelectByExample="false"
               enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="is_deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="bit"/>
            <columnOverride column="create_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
            <columnOverride column="update_time" javaType="java.time.LocalDateTime" jdbcType="datetime"/>
        </table>
    </context>
</generatorConfiguration>
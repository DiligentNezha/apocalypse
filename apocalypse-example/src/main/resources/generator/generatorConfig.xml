<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application-dev.properties"/>

    <!-- 不生成ModelExample-->
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!--<context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">-->
        <property name="javaFileEncoding" value="UTF-8" />
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.apocalypse.common.mybatis.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.apocalypse.example.model" targetProject="src/main/java"/>

         <sqlMapGenerator targetPackage="mapper/simple" targetProject="src/main/resources"/>

         <javaClientGenerator targetPackage="com.apocalypse.example.mapper.simple" targetProject="src/main/java"
                              type="XMLMAPPER"/>

         <table tableName="t_example_demo" domainObjectName="DemoModel" enableSelectByExample="false"
                enableDeleteByExample="false" enableUpdateByExample="false" enableCountByExample="false"
                >
             <!--mysql 配置-->
             <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
             <columnOverride column="sex" javaType="java.lang.Integer" jdbcType="tinyint"/>
             <columnOverride column="birthday" javaType="java.time.LocalDate" jdbcType="date"/>

             <columnOverride column="fcd" javaType="java.time.LocalDateTime" jdbcType="timestamp"/>
             <columnOverride column="lmd" javaType="java.time.LocalDateTime" jdbcType="timestamp"/>
        </table>
    </context>
</generatorConfiguration>